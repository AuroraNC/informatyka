#include <iostream>

using namespace std;

int main()
{
    int a, b, c=0, d=1;
    double x;
    
    cout << "Podaj liczbe: ";
    cin >> a;
    b = 2 * a; 
    if(a != 0)
    {
        for (int i = 0; i <= a; i++) 
        {
            c= c + i;
        }
    }
    
    x = 1.0 * b / c;

    for(int i = 1; i <= a; i++)
    {
        d= d * i;
    }
    
    double result = x - 1.0 *  1/2 * d;
    cout << d;
    cout << x;
    cout << "Wynik: " << result << endl;
    return 0;
}









#include <iostream>

using namespace std;

double potega(double a, int e)
{
    double t = 1;
    if(e == 0)
    {
        return 1;
    }
    
    else
    {
        while (e)
        {
            t = t * a;
            e = e - 1l;
        }
    }
    return t;
}

int main()
{
    int a;
    double b = 0, c = 0;
    
    cout << "Podaj liczbe: ";
    cin >> a;
    
        for(int i = 1; i<=a; i++)
        {
            b = b + 1.0 * potega(1.0 * 4/7 ,i);
        }
        
        c = 1.0 * 3 * b;

cout << c;
return 0;
}
